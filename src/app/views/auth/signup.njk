{% extends "_layouts/auth.njk" %}

{% block body %}
    <form action="/signup" method="post" enctype="multipart/form-data">
        <label for="avatar">
            <img src="/images/avatar.svg" height="24"/>
        </label>
        <input id="avatar" name="avatar" type="file"/>
        <input type="text" name="name" placeholder="Nome completo" />
        <input type="email" name="email" placeholder="Seu email" />
        <input type="password" name="password" placeholder="Senha secreta" />
        <label for="provider">
            <input type="checkbox" id="provider" name="provider" value="1"> Sou cabeleireiro</input>
        </label>
        <button type="submit">Criar conta</button>
         <a href="/">JÃ¡ possuo cadastro</a>
    </form>

    <script type="text/javascript">
        var avatar = document.getElementById('avatar');
        var img = document.querySelector("label[for=avatar] img");
        console.log(avatar);
        console.log(img);
        avatar.onchange = function(e) {
            img.classList.add('preview');
            img.src = URL.createObjectURL(e.target.files[0]);
        };
    </script>
{% endblock %}

